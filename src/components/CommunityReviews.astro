---
import ReviewCard from './ReviewCard.astro';

const reviews = [
    {
        quote: "Salongroei saved me from a massive software mistake. Their comparison was so detailed!",
        authorName: "Sarah T.",
        businessName: "Glow Studio NYC",
        variant: 'soft-sage' as const,
        icon: 'person',
        bubbleAlignment: 'left' as const
    },
    {
        quote: "Finally, a tech site that doesn't feel like a tech site. It feels like a boutique magazine!",
        authorName: "Marcus L.",
        businessName: "The Modern Barber",
        variant: 'primary' as const,
        icon: 'person',
        bubbleAlignment: 'right' as const
    },
    {
        quote: "The 10 hours saved per week wasn't marketing hypeâ€”it actually happened for my team.",
        authorName: "Elena R.",
        businessName: "Petal & Bloom Spa",
        variant: 'sunshine-yellow' as const,
        icon: 'person',
        bubbleAlignment: 'left' as const
    }
];
---
<section class="mb-24 px-4">
    <div class="text-center mb-16">
        <h2 class="font-display text-4xl font-black mb-4">What Salon Owners Are Saying</h2>
        <p class="text-expert-navy/60">Real feedback from our growing community of 5,000+ members.</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
        {reviews.map(review => (
            <ReviewCard {...review} />
        ))}
    </div>
</section>
