---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section class="mb-24">
<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
<div class="bg-soft-sage/20 border-2 border-soft-sage/30 p-8 rounded-xl flex flex-col items-center text-center group hover:bg-soft-sage/30 transition-all">
<span class="text-4xl font-display font-black mb-2 text-expert-navy">50+</span>
<p class="text-sm font-semibold uppercase tracking-widest text-expert-navy/60">{t('stats.toolsCompared')}</p>
<div class="w-12 h-1 bg-soft-sage mt-4 rounded-full"></div>
</div>
<div class="bg-sunshine-yellow/20 border-2 border-sunshine-yellow/30 p-8 rounded-xl flex flex-col items-center text-center group hover:bg-sunshine-yellow/30 transition-all">
<span class="text-4xl font-display font-black mb-2 text-expert-navy">10+</span>
<p class="text-sm font-semibold uppercase tracking-widest text-expert-navy/60">{t('stats.hoursSaved')}</p>
<div class="w-12 h-1 bg-sunshine-yellow mt-4 rounded-full"></div>
</div>
<div class="bg-primary/10 border-2 border-primary/20 p-8 rounded-xl flex flex-col items-center text-center group hover:bg-primary/20 transition-all">
<span class="text-4xl font-display font-black mb-2 text-expert-navy">5,000+</span>
<p class="text-sm font-semibold uppercase tracking-widest text-expert-navy/60">{t('stats.ownersHelped')}</p>
<div class="w-12 h-1 bg-primary mt-4 rounded-full"></div>
</div>
</div>
</section>
