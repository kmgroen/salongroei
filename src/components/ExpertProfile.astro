---
interface Props {
    name: string;
    title: string;
    imageUrl: string;
    imageAlt: string;
}

const { name, title, imageUrl, imageAlt } = Astro.props;
---
<div class="flex flex-col items-center">
    <div class="size-48 rounded-2xl overflow-hidden border-4 border-white shadow-xl rotate-3">
        <div class="w-full h-full bg-cover bg-center" data-alt={imageAlt} style={`background-image: url("${imageUrl}");`}></div>
    </div>
    <div class="mt-6 text-center">
        <p class="font-display font-bold text-xl">{name}</p>
        <p class="text-xs uppercase tracking-widest text-primary font-black">{title}</p>
    </div>
</div>
