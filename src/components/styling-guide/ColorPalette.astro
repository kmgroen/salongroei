---
// Color Palette section - displays all brand colors with their usage
const colors = [
  {
    name: "Friendly Coral",
    cssVar: "primary",
    hex: "#ff8370",
    textClass: "text-white",
    usage: "Primary CTA, Accents"
  },
  {
    name: "Expert Navy",
    cssVar: "expert-navy",
    hex: "#1E3A5F",
    textClass: "text-white",
    usage: "Headings, Dark Sections"
  },
  {
    name: "Background Cream",
    cssVar: "background-light",
    hex: "#FFF8F0",
    textClass: "text-expert-navy",
    usage: "Main Background"
  },
  {
    name: "Soft Sage",
    cssVar: "soft-sage",
    hex: "#B4C7B0",
    textClass: "text-expert-navy",
    usage: "Positive Stats, Tags"
  },
  {
    name: "Sunshine Yellow",
    cssVar: "sunshine-yellow",
    hex: "#FFD93D",
    textClass: "text-expert-navy",
    usage: "Warnings, Highlights"
  },
  {
    name: "White",
    cssVar: "white",
    hex: "#FFFFFF",
    textClass: "text-expert-navy",
    usage: "Cards, Inputs"
  },
];
---
<section class="mb-24">
  <h2 class="font-display text-3xl font-black mb-12 border-b-2 border-primary inline-block pb-2">
    2. Color Palette
  </h2>
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
    {colors.map((color) => (
      <div class="flex flex-col gap-2">
        <div
          class={`h-24 rounded-xl shadow-inner flex items-end p-2 ${color.textClass}`}
          style={`background-color: ${color.hex}`}
        >
          <span class="text-[10px] font-black">{color.hex}</span>
        </div>
        <p class="font-bold text-sm mt-2">{color.name}</p>
        <p class="text-[10px] uppercase tracking-tighter opacity-60">{color.usage}</p>
      </div>
    ))}
  </div>
</section>
