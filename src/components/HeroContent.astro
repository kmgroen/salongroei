---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<div class="relative z-10">
    <div class="inline-block mb-4 px-3 py-1 rounded-full bg-sunshine-yellow/30 text-expert-navy font-bold text-xs uppercase tracking-widest">
        {t('hero.badge')}
    </div>
    <h1 class="font-display text-5xl md:text-7xl font-black text-expert-navy dark:text-white leading-[1.1] mb-6" set:html={t('hero.title')}>
    </h1>
    <p class="text-lg md:text-xl text-expert-navy/70 dark:text-white/70 mb-10 max-w-lg leading-relaxed" set:html={t('hero.subtitle')}>
    </p>
    <div class="flex flex-wrap gap-4">
        <button class="bg-primary text-white px-8 py-4 rounded-xl font-bold text-lg shadow-xl shadow-primary/30 hover:-translate-y-1 transition-all focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2">
            {t('hero.cta.primary')}
        </button>
        <button class="bg-white dark:bg-background-dark text-expert-navy dark:text-white border-2 border-expert-navy/10 px-8 py-4 rounded-xl font-bold text-lg hover:bg-expert-navy/5 transition-all focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2">
            {t('hero.cta.secondary')}
        </button>
    </div>
</div>
