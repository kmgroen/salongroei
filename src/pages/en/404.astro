---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Illustration404 from '../../components/404Illustration.astro';
import SearchBox from '../../components/SearchBox.astro';
import BlogCard from '../../components/blog/BlogCard.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Get featured blog posts for suggestions (limit to 3)
const allPosts = await getCollection('blog');
const featuredPosts = allPosts
  .filter(post => post.data.featured)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

// Quick links data
const quickLinks = [
  {
    title: t('404.quickLinks.home'),
    href: '/en',
    icon: 'home',
    description: 'Start from our homepage',
  },
  {
    title: t('404.quickLinks.blog'),
    href: '/en/blog',
    icon: 'article',
    description: 'Discover our salon articles',
  },
  {
    title: t('404.quickLinks.tools'),
    href: '/tools',
    icon: 'compare_arrows',
    description: 'Compare salon software',
  },
  {
    title: t('404.quickLinks.guides'),
    href: '/en/guides',
    icon: 'menu_book',
    description: 'Read our complete guides',
  },
];
---

<BaseLayout
  title={t('404.title')}
  description={t('404.subtitle')}
>
  <Fragment slot="head">
    <!-- Prevent search engines from indexing 404 pages -->
    <meta name="robots" content="noindex, nofollow" />
  </Fragment>

  <Header />

  <main class="max-w-[1200px] mx-auto px-6 py-16 md:py-24">
    <!-- Hero Section -->
    <section class="text-center mb-20 md:mb-24">
      <!-- Illustration -->
      <div class="w-full max-w-md mx-auto mb-12">
        <Illustration404 />
      </div>

      <!-- 404 Number -->
      <div class="mb-8">
        <h1 class="font-display text-8xl md:text-9xl font-black text-primary mb-6 leading-none">
          404
        </h1>
        <h2 class="font-display text-3xl md:text-4xl lg:text-5xl font-black text-expert-navy dark:text-white mb-6 max-w-2xl mx-auto">
          {t('404.title')}
        </h2>
        <p class="text-lg md:text-xl text-expert-navy/70 dark:text-white/70 max-w-xl mx-auto font-sans">
          {t('404.subtitle')}
        </p>
      </div>
    </section>

    <!-- Search Box -->
    <section class="mb-24">
      <SearchBox autoFocus={true} />
    </section>

    <!-- Quick Links -->
    <section class="mb-24">
      <h2 class="font-display text-3xl md:text-4xl font-black text-expert-navy dark:text-white text-center mb-12">
        {t('404.quickLinks.title')}
      </h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {quickLinks.map((link) => (
          <a
            href={link.href}
            class="group bg-white dark:bg-expert-navy/20 rounded-3xl p-8 shadow-sm hover:shadow-2xl border-2 border-expert-navy/5 dark:border-white/5 hover:border-primary/20 transition-all duration-300 hover:-translate-y-2"
          >
            <div class="flex flex-col items-center text-center gap-4">
              <div class="w-16 h-16 bg-primary/10 rounded-2xl flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                <span class="material-symbols-outlined text-primary text-4xl" aria-hidden="true">
                  {link.icon}
                </span>
              </div>
              <div>
                <h3 class="font-display text-xl font-black text-expert-navy dark:text-white mb-2 group-hover:text-primary transition-colors">
                  {link.title}
                </h3>
                <p class="text-sm text-expert-navy/60 dark:text-white/60">
                  {link.description}
                </p>
              </div>
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Popular Articles -->
    {featuredPosts.length > 0 && (
      <section class="mb-24">
        <div class="text-center mb-12">
          <div class="flex items-center justify-center gap-3 mb-4">
            <span class="material-symbols-outlined text-primary text-4xl" aria-hidden="true">
              star
            </span>
            <h2 class="font-display text-3xl md:text-4xl font-black text-expert-navy dark:text-white">
              {t('404.popularArticles.title')}
            </h2>
          </div>
          <p class="text-expert-navy/60 dark:text-white/60">
            Start here while you continue searching
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-10">
          {featuredPosts.map((post) => (
            <BlogCard
              slug={post.slug}
              title={post.data.title[lang]}
              description={post.data.description[lang]}
              category={post.data.category}
              date={post.data.date}
              image={post.data.image}
              featured={post.data.featured}
            />
          ))}
        </div>
      </section>
    )}

    <!-- Help Section -->
    <section class="bg-gradient-to-br from-expert-navy/5 to-soft-sage/10 dark:from-expert-navy/20 dark:to-soft-sage/5 rounded-3xl p-12 md:p-16 text-center">
      <span class="material-symbols-outlined text-primary text-5xl mb-6 inline-block" aria-hidden="true">
        support_agent
      </span>
      <h2 class="font-display text-2xl md:text-3xl font-black text-expert-navy dark:text-white mb-4">
        {t('404.help.title')}
      </h2>
      <p class="text-expert-navy/70 dark:text-white/70 mb-8 max-w-xl mx-auto">
        {t('404.help.subtitle')}
      </p>
      <a
        href="mailto:contact@salongroei.com"
        class="inline-flex items-center gap-2 bg-primary text-white px-8 py-4 rounded-full font-bold text-lg shadow-lg shadow-primary/30 hover:scale-105 hover:shadow-xl hover:shadow-primary/40 transition-all"
      >
        <span class="material-symbols-outlined" aria-hidden="true">mail</span>
        {t('404.help.button')}
      </a>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .material-symbols-outlined {
    font-variation-settings:
      'FILL' 0,
      'wght' 400,
      'GRAD' 0,
      'opsz' 24;
  }

  /* Animate illustration on load */
  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  :global(.search-box-container) {
    animation: fadeInUp 0.6s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
