---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Vind de beste salon software">
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="bg-gradient-to-b from-slate-50 to-white py-20">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-navy mb-6">
          Vind de beste salon software voor jouw zaak
        </h1>
        <p class="text-xl text-slate-600 mb-8 max-w-2xl mx-auto">
          Onafhankelijke vergelijkingen van salon software in Nederland.
          Maak de juiste keuze voor jouw salon.
        </p>
        <a
          href="/vergelijk"
          class="inline-block bg-primary hover:bg-primary-dark text-white font-semibold px-8 py-4 rounded-lg transition-colors"
        >
          Bekijk vergelijking
        </a>
      </div>
    </section>

    <!-- Placeholder for more content -->
    <section class="py-16 px-6">
      <div class="max-w-4xl mx-auto text-center">
        <p class="text-slate-500">
          Meer content volgt binnenkort...
        </p>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-slate-50 border-t border-slate-200 py-8">
      <div class="max-w-4xl mx-auto px-6 text-center text-sm text-slate-500">
        <p>&copy; 2026 salongroei.com</p>
        <p class="mt-2">
          Een onafhankelijk vergelijkingsplatform voor salon software.
        </p>
      </div>
    </footer>
  </main>
</BaseLayout>
