---
import '../styles/global.css';
import '../styles/accessibility.css';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import SEOMetaTags from '../components/seo/SEOMetaTags.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article' | 'product';
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const {
  title,
  description = t('meta.description'),
  image,
  type = 'website',
} = Astro.props;

// Get current path and construct canonical URL
const currentPath = Astro.url.pathname;

// Construct alternate URLs for language switching
const alternateLocale = lang === 'nl' ? 'en' : 'nl';
const alternateUrl = lang === 'nl'
  ? `/en${currentPath}`
  : currentPath.replace(/^\/en/, '') || '/';
---

<!doctype html>
<html lang={lang} class="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preconnect to Google Fonts for faster loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Preload critical fonts for faster initial render -->
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Noto+Serif:wght@400;700;900&family=Noto+Sans:wght@400;500;700&display=swap&subset=latin"
    />

    <!-- SEO Meta Tags -->
    <SEOMetaTags
      title={title}
      description={description}
      type={type}
      image={image}
      canonicalUrl={currentPath}
      locale={lang}
      alternateLocale={alternateLocale}
      alternateUrl={alternateUrl}
    />

    <!-- Optimized Fonts with display=swap and Latin subset -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif:wght@400;700;900&family=Noto+Sans:wght@400;500;700&display=swap&subset=latin" rel="stylesheet"/>

    <title>{title} | Salongroei</title>

    <!-- Allow injection of additional head elements (structured data, etc.) -->
    <slot name="head" />
  </head>
  <body class="bg-background-light dark:bg-background-dark font-sans text-expert-navy">
    <a href="#main-content" class="skip-link">
      {lang === 'nl' ? 'Spring naar hoofdinhoud' : 'Skip to main content'}
    </a>
    <slot />
  </body>
</html>
